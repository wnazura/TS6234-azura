<h1>Change Password</h1>

<%= error_messages_for 'user' %>

<p><% form_tag :controller => 'users', :action => 'change_password', :id => @user do %>

  <label for="user_password">Choose password:</label>
  <br/>
  <%= password_field "user", "password", :size => 20, :value=>"" %><br/>
  <label for="user_password_confirmation">Confirm password:</label>
  <br/>
  <%= password_field "user", "password_confirmation", :size => 20, :value=>"" %><br/>
  <%= submit_tag "Submit" %></p>

<% end %>

<%= link_to 'Back', edit_user_path(@user) %>