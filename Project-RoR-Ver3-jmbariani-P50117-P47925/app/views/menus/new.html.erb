<h1>New menu</h1>

<% form_for(@menu, :html => { :multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%#= f.text_field :category_id %>
<%=f.collection_select(:category_id, @categories, :id, :title, :prompt => 'Please Select')%>
  </p>
<p>
    <%= f.label :image %><br />
    <%= file_field_tag :file_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', menus_path %>